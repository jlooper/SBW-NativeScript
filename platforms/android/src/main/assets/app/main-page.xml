     <!--settings-->
     <TabViewItem title="Settings" id="settings" iconSource="res://settings">

       <TabViewItem.view>
          
            <DockLayout stretchLastChild="true">            
                          
              <GridLayout dock="top" rows="auto">
                
                <GridLayout cssClass="header-container" colSpan="5" columns="*,*,*,*,*">
                    <Image stretch="none" src="res://refresh" horizontalAlignment="left" verticalAlignment="center" tap="refresh" cssClass="top-icon"/>
                    <Label text="Settings" colSpan="5" horizontalAlignment="center" verticalAlignment="center" cssClass="large-text"/>             
                    <ActivityIndicator col="3" busy="{{ isLoading }}" horizontalAlignment="center" />
                    <Image stretch="none" src="res://info" col="4" horizontalAlignment="right" verticalAlignment="center" cssClass="top-icon" tap="openInfo"/>
                  </GridLayout>  
               
               </GridLayout> 
                                           
              <GridLayout dock="top"> 

              <ScrollView id="scrollView">

                <StackLayout orientation="vertical" row="0" horizontalAlignment="center" rows="auto">

                  
                   <GridLayout dock="top"  cssClass="blue4-container">
                    <GridLayout row="1" columns="*"> 
                      <Label text="How do you like your weather?" cssClass="medium-text" textWrap="true"/>
                    </GridLayout>
                  </GridLayout>  

                  <GridLayout dock="top">
                    <GridLayout row="1" padding="5"> 
                      <SegmentedBar id="sBar" selectedIndex = "{{ selectedIndex }}" style="color: white" selectedBackgroundColor="white">
                        <SegmentedBar.items>
                          <SegmentedBarItem title="Celsius" />
                          <SegmentedBarItem title="Fahrenheit" />
                        </SegmentedBar.items>
                      </SegmentedBar>
                    </GridLayout>
                  </GridLayout>

                  <GridLayout dock="top"  cssClass="blue4-container">
                    <GridLayout row="1" columns="*"> 
                      <Label text="What time do you leave for school?" cssClass="medium-text" textWrap="true"/>
                    </GridLayout>
                  </GridLayout>  
                  
                  <GridLayout dock="top">
                    <GridLayout row="1"> 
                      <TimePicker id="time"/>                
                    </GridLayout>
                  </GridLayout>  

                  
                  <GridLayout row="1" columns="*" colSpan="3" cssClass="blue4-container"> 
                    <Label text="How do you travel to school?" cssClass="medium-text" textWrap="true"/>
                  </GridLayout>
              
                  <GridLayout row="1" columns="*,*">                      
                    <StackLayout orientation="vertical" col="0" cssClass="blue1-container">     
                      <GridLayout padding="10" row="1" id="busContainer" horizontalAlignment="center" columns="auto">
                          </GridLayout> 
                      </StackLayout>
                      <StackLayout orientation="vertical" col="1" cssClass="blue3-container">
                        <GridLayout padding="10" row="1" id="footContainer" horizontalAlignment="center" columns="auto">
                        </GridLayout>                          
                      </StackLayout>                   
                 </GridLayout>
              
                  <GridLayout dock="top">
                       <GridLayout row="2" columns="*,*">                    
                            <StackLayout orientation="vertical" col="0" cssClass="blue3-container">                          
                            <GridLayout padding="10" row="1" id="carContainer" horizontalAlignment="center" columns="auto">
                            </GridLayout> 
                          </StackLayout>
                          <StackLayout orientation="vertical" col="1" cssClass="blue1-container">
                            <GridLayout padding="10" row="1" id="bikeContainer" horizontalAlignment="center" columns="auto">
                            </GridLayout>                          
                          </StackLayout>
                       </GridLayout>
                  </GridLayout>

                </StackLayout>
              
              </ScrollView>

             </GridLayout>           
            </DockLayout>
         
